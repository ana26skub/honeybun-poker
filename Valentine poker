<script>

let cards = ["Q‚ô•","J‚ô•","10‚ô•","2‚ô£","3‚ô¶"];

function createCard(value) {
    let card = document.createElement("div");
    card.className = "card";

    card.innerHTML = `
        <div class="inner">
            <div class="front">${value}</div>
            <div class="back"></div>
        </div>
    `;

    return card;
}

function fold() {
    alert("Nice try Honeybun üòâ You can't fold love.");
}

function allIn() {
    document.getElementById("allin").disabled = true;

    let community = document.getElementById("community");

    cards.forEach((value, index) => {
        setTimeout(() => {
            let card = createCard(value);
            community.appendChild(card);

            setTimeout(() => {
                card.querySelector(".inner").classList.add("flipped");
            }, 100);
        }, index * 800);
    });

    setTimeout(() => {
        document.body.innerHTML = `
        <h1>ROYAL FLUSH ‚ô•Ô∏è</h1>
        <h2>Smart man, Honeybun.</h2>
        <h2>You just won my heart.</h2>
        <h1>Will you be my Valentine? üíò</h1>
        <button onclick="yes()" style="background:red;color:white;padding:15px 30px;border:none;border-radius:25px;font-size:20px;">YES üíñ</button>
        `;
    }, 5000);
}

function yes() {
    document.body.innerHTML = `
    <h1>Best decision of your life üòåüíï</h1>
    <h2>I love you, Honeybun ‚ô†Ô∏è‚ô•Ô∏è</h2>
    `;
}

</script>

